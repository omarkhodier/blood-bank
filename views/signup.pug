.heder
  .container
    .row
      .col-md-3
        .logo-d
          a(href='/')
            img(src='/img/logo.png' alt='logo')
.container
  center
    h2 Sign up form
    if errors
      each error,i in errors
        div(class='alert alert-danger') #{error.msg}
    br
  form(method='post' action="users/signup")
    .form-group
      select.form-control.input-lg(name='work')
        option(value='selecto') Select Your Type...
        option(value='Physician') Physician
        option(value='Employee') Employee
        option(value='Student') Student
    .form-group
      label(for='Id') ID:
      input#id.form-control(type='text' placeholder='14 numbers only' name='Id')
    .form-group
      label(for='name') Name:
      input#name.form-control(type='text' name='name' placeholder='type your name')
    .form-group
      label(for='address') Address:
      input#address.form-control(type='text' name='address'  placeholder='type your address')
    .form-group
      label(for='age') Age:
      input#age.form-control(type='number' name='age'  placeholder='type your age')
    .form-group
      label(for='faculty') Faculty:
      input#faculty.form-control(type='text' name='faculty' placeholder='type your faculty')
    .form-group
      label(for='facID') Faculty ID:
      input#name.form-control(type='text' name='facID'  placeholder='type your facID')
    .form-group
      label(for='grade') Grade:
      input#grade.form-control(type='text' name='grade'  placeholder='type your grade')
    .form-group
      label(for='phone') phone:
      input#phone.form-control(type='text' name='phone'  placeholder='type your number')
    .form-group
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='At least 8 characters' name='password')
    .form-group
      label(for='cpassword') Confirm password:
      input#cpassword.form-control(type='password' placeholder='At least 8 characters' name='password2')
    br
    center
      button.btn.btn-primary(style='height:35px;width:200px' type='submit') Register
