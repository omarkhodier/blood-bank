  body
    .heder
      .container
        .row
          .col-md-3
            .logo-d
              a(href='/')
                img(src='/img/logo.png', alt='logo')
          .col-md-9
            .links-nv
              ul.list-unstyaled.list-inline
                li
                  img(src='/img/user.png', alt='')
                li
                  p welcome #{userName}  
                li your last visit was in #{currentDate}
                li
                  a(href='/users/logout')
                    i.fa.fa-sign-out
                    |  sign out
    section.search-box
      .container
        .row
          .dont.col-md-2
            h2 Enter ID:
          .db.col-md-10
            form(action="/users/physician" method='POST' )
              br
              .tyo
                br
                .form-group
                  lable select student
                  select.form-control(name='student-select' value="", id='students-list') 
                    each user_rec,i in user_records
                      option(value=user_rec.Id,id=user_rec.Id) #{user_rec.name} 
                .form-group
                  label ID
                  input.form-control(type='text', placeholder='ID( numbers only)' name='userId', id='student-id')
                .form-group(id='width')
                  label Weight
                  input.form-control(type='text', placeholder='width',name='width')
                .form-group(id='height')
                  label Height
                  input.form-control(type='text', placeholder='height',name='height')
                .form-group(id='BLOOD')
                  label blood type
                  input.form-control(type='text', placeholder='blood type',name='blood')
                .form-group(id='PRE')
                  label blood pressure
                  input.form-control(type='text', placeholder='normal blood pressure 120/80',name='pressure')
                .form-group(id='rEYE')
                  label right-eye
                  input.form-control(type='text', placeholder='normal 6/6',name='reye')
                .form-group(id='lEYE')
                  label lift-eye
                  input.form-control(type='text', placeholder='normal 6/6',name='leye')
                .form-group(id='DIA')
                  label diabetes
                  input.form-control(type='text', placeholder='normal to be 70-110  mg/dl',name='diabetes')
                .form-group(id='WBC')
                  label WBC
                  input.form-control(type='text', placeholder='normal to be 4000-11000/mm3',name='WBC')
                .form-group(id='RBC')
                  label RBCs : 
                  input.form-control(type='text', placeholder='normal to be 4.5 -5.5 mil/mm3 ',name='RBC')
                .form-group(id='HEMO')
                  label HB 
                  input.form-control(type='text', placeholder='normal to be 13.5_ 17.5 gm/dl',name='Hemoglobin')
                .form-group(id='MVC')
                  label MCV
                  input.form-control(type='text', placeholder=' normal to be 90  femtoliter',name='MVC')
                .form-group(id='MCH')
                  label MCH
                  input.form-control(type='text', placeholder='normal to be 30 picogram ',name='MCH')
                .form-group(id='MCHM')
                  label MCHC
                  input.form-control(type='text', placeholder='normal to be 32-36 g/dl',name='MCHM')
                .form-group(id='RDW')
                  label RDW
                  input.form-control(type='text', placeholder='normal to be 12-16% ',name='RDW')
                .form-group(id='IPD')
                  label IPD
                  input.form-control(type='text', placeholder='normal to be 54-74 millimeter',name='IPD')
                button#gfg.btn.btn-primary(type='submit') Submit
                br
                br
                .form-group
                 input.form-control(type='text', placeholder='ID(14 numbers only)' name='searchId' id="search-id-input")
                 br
                button.btn.btn-primary(type='button',id='search-button') Search
            table(class="table table-stripped")
              thead
                th Id
                th BloodType
                th Weight
                th height  
              tbody(id="table-result")
                if records
                  each record,i in records
                    tr
                      td #{record.Id}
                      td #{record.blood.blood}
                      td #{record.blood.width}
                      td #{record.blood.height}
                    
              
