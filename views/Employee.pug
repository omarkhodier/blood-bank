  body
    .heder
      .container
        .row
          .col-md-3
            .logo-d
              a(href='/')
                img(src='/img/logo.png', alt='logo')
          .col-md-9
            .links-nv
              ul.list-unstyaled.list-inline
                li
                  img(src='/img/user.png', alt='')
                li
                  p welcome #{userName} 
                li your last visit was in #{currentDate}
                li
                  a(href='/users/logout')
                    i.fa.fa-sign-out
                    |  sign out
    section.search-box
      .container
        .row
          .dont.col-md-2
            h2 Search By : 
          .db.col-md-10
            form(method='POST' action="/users/employee")
              br
              .form-group(id="date-foundation")
                  label date of donation
                  input.form-control(type='date', placeholder='date of donation',name='date',id='date-foundation-input')
              .form-group(id="amount-blood")
                  label amount of blood
                  input.form-control(type='text', placeholder='amount of blood',name='amount',id='amount-blood-input')
              .form-group
                select.form-control(name='type',id='search-type')
                  option(value="")  Select One...
                  option(name='bloodType' value="bloodType") Blood Type
                  option(name='Idoption' value="Id") ID
                  //- option ID
              .form-group(id='user_blood')
                label Blood Type :
                select.form-control(name='blood' value="")
                  option(value='') Select One...
                  option(value='o+') O+
                  option(value='o-') O-
                  option(value='a+') A+
                  option(value='a-') A-
                  option(value='b+') B+
                  option(value='b-') B-
                  option(value='ab+') AB+
                  option(value='ab-') AB-
              .form-group(id='user_Id')
                 input.form-control(type='text', placeholder='ID(14 numbers only)' name='Id')
            
              button.btn.btn-primary(type='submit') Search
            table(class="table table-stripped")
              thead
                th Id
                th BloodType
                th name
                th address
                th phone  
                th actions
              tbody
                if records
                  each record,i in records
                    tr
                      td #{record.Id}
                      td #{record.blood}
                      td #{record.name}
                      td #{record.address}
                      td #{record.phone}
                      td
                       button(type="button",class="btn btn-warning", id="Add-data-by-emp" style='margin:2px') ADD Data
                       a(href="javascript:;" ,id="save-new" ,data-user-id=record.Id ,class="btn btn-success") Save Data  
