  body
    .heder
      .container
        .row
          .col-md-3
            .logo-d
              a(href='/')
                img(src='/img/logo.png', alt='logo')
          .col-md-9
            .links-nv
              ul.list-unstyaled.list-inline
                li
                  img(src='/img/user.png', alt='')
                li
                  p welcome #{userName} 
                li your last visit was in #{currentDate}
                li
                  a(href='/users/logout')
                    i.fa.fa-sign-out
                    |  sign out
    section.search-box
      .container
        .roew
          ul.nav.nav-tabs
            li.active
              a(data-toggle='tab', href='#midical') Blood Bank Info
            li
              a(data-toggle='tab', href='#blood') Medical Record
          .tab-content
            #midical.tab-pane.fade.in.active
              h3  Blood Bank Info
              table.table
                thead
                  tr
                    th  Amount
                    th  Donation Date
                    th  Id
                    th  blood type
                tbody
                  if user.savedData
                    each record,i in user.savedData
                      tr
                        td #{record.amount}
                        td #{record.date}
                        td #{user.Id}
                        td #{user.blood}
            #blood.tab-pane.fade
              h3 Medical Record 
              table(class="table table-stripped")
                thead
                  th name
                  th address
                  th phone
                  th faculty
                  th age
                  th pressure
                  th BloodType
                  th Weight
                  th height 
                  th reye
                  th leye 
                  th diabetes 
                  th Hemoglobin
                  th WBC
                  th IPD
                  th MCV

                tbody
                  if user
                    
                      tr
                       td #{user.name}
                        td #{user.address}
                        td #{user.phone}
                        td #{user.faculty}
                        td #{user.age}
                        td #{user.pressure}
                        td #{user.blood}
                        td #{user.width}
                        td #{user.height}
                        td #{user.reye}
                        td #{user.leye}
                        td #{user.diabetes}
                        td #{user.Hemoglobin}
                        td #{user.WBC}
                        td #{user.IPD}
                        td #{user.MVC}
            br
            center
              button.btn.btn-primary(style='height:35px;width:200px', type='submit' ,onclick="window.print()") Print
    footer
      .container.text-center
